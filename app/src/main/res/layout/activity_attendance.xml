<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log"
    tools:context=".AttendanceActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/greetingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:text="Hope you have a good day"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/attendanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/greetingMessage"
            android:layout_marginTop="24dp"
            android:textColor="@color/purp"
            android:text="Attendance Management"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/courseSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendanceTitle"
            android:layout_marginTop="16dp" />

        <!-- Horizontal Scroll View for Table Layout -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseSpinner"
            android:layout_marginTop="16dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/attendanceTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <!-- Table Header -->
                    <TableRow android:background="#0000FF">
                        <TextView
                            android:padding="8dp"
                            android:text="ID"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />
                        <TextView
                            android:padding="8dp"
                            android:text="Name"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />
                        <TextView
                            android:padding="8dp"
                            android:text="L1 (2024-07-22)"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <!-- Attendance Data Row -->
                    <TableRow android:background="@color/white">
                        <TextView
                            android:padding="8dp"
                            android:text="F2020266" />
                        <TextView
                            android:padding="8dp"
                            android:text=" " />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="P"
                                android:textColor="#0000FF"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="70.36%"
                                android:textColor="#000000"
                                android:textSize="9sp"
                                android:gravity="center" />
                        </LinearLayout>
                    </TableRow>

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>